/var/log/fail2ban.log {
    daily
    rotate 4
    notifempty
    missingok
    postrotate
        if [ "$(systemctl is-active fail2ban)" == "active" ]; then fail2ban-client flushlogs 1>/dev/null; fi
    endscript

    # If fail2ban runs as non-root it still needs to have write access
    # to logfiles.
    # create 640 fail2ban adm
    create 640 root adm
}
